			<StackPanel Margin="0,0,0,0">
                <TextBlock x:Uid="Settings_Data" Style="{StaticResource SubtitleTextBlockStyle}"
                           Margin="{StaticResource SmallTopBottomMargin}"/>

                <StackPanel Orientation="Horizontal">

                    <Button x:Uid="DeleteButton">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:Uid="DeleteDataSetButton" Click="DeleteDataSet_Click"/>
                                <MenuFlyoutItem x:Uid="DeleteUserDataButton" Click="DeleteUserData_Click"/>
                            </MenuFlyout>
                        </Button.Flyout>
